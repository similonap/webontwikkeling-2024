<% let beerColorsBg=["bg-green-200","bg-green-500"]; let beerColorsFront="text-green-600" ; let level="LOW" ; if
    (beer.alcoholPercentage < 5) { beerColorsBg=["bg-green-200","bg-green-500"]; beerColorsFront="text-green-600" ;
    level="LOW" ; } else if (beer.alcoholPercentage < 7.5) { beerColorsBg=["bg-orange-200","bg-orange-500"];
    beerColorsFront="text-orange-600" ; level="MEDIUM" ; } else { beerColorsBg=["bg-red-200","bg-red-500"];
    beerColorsFront="text-red-600" ; level="HIGH" ; } %>

    <div>
        <div class="bg-white rounded-lg shadow-md p-4 mb-4"><img src="<%= beer.logo %>" alt="<%= beer.name %>"
                class="w-24 h-24 rounded-full mx-auto">
            <div class="text-center">
                <h2 class="text-xl font-semibold">
                    <%= beer.name %>
                </h2>
                <p class="text-gray-500 mb-2">Type: <%= beer.type %>
                </p>
                <p class="text-gray-500 mb-4">Description: <%= beer.description %>
                </p>
            </div>
            <div class="relative pt-1">
                <div class="flex mb-2 items-center justify-between">
                    <div><span
                            class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full <%= beerColorsBg[0] %> <%= beerColorsFront %>">Alcohol
                            Percentage: <%= level %></span></div>
                    <div class="text-right"><span class="text-xs font-semibold inline-block <%= beerColorsFront %>">
                            <%= beer.alcoholPercentage %>%
                        </span>
                    </div>
                </div>
                <div class="overflow-hidden h-2 mb-4 text-xs flex rounded <%= beerColorsBg[0] %>">
                    <div class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center <%= beerColorsBg[1] %>"
                        style="width: <%= beer.alcoholPercentage*8 %>%"></div>
                </div>
            </div>
        </div>
        
        <%- include("checkins", { checkins: checkins, showImage: false }) %>
    </div>