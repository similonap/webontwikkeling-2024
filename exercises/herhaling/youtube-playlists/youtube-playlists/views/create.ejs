<%- include("partials/header") %>
<%- include("partials/navbar") %>
    <div class="form-container">
        <h1>Submit a Video</h1>
        <form action="/create" method="POST" class="video-form">
            <div class="form-group">
                <label for="title" class="form-label">Title:</label>
                <input type="text" id="title" name="title" class="form-input" required>
            </div>
            <div class="form-group">
                <label for="url" class="form-label">URL:</label>
                <input type="url" id="url" name="url" class="form-input" required>
            </div>
            <div class="form-group">
                <label for="description" class="form-label">Description:</label>
                <textarea id="description" name="description" class="form-textarea" required></textarea>
            </div>
            <div class="form-group">
                <label for="rating" class="form-label">Rating:</label>
                <input type="number" id="rating" name="rating" class="form-input" min="0" max="10" step="0.1" required>
            </div>
            <div class="form-group">
                <button type="submit" class="form-button">Submit</button>
            </div>
        </form>
    </div>

<%- include("partials/footer") %>